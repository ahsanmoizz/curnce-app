{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "../../",
    "paths": {
      "@ufa/shared": ["packages/shared/src"],
      "@ufa/blockchain": ["packages/blockchain/src"],
      "@ufa/ingestion": ["packages/ingestion/src"],
      "@ufa/rules": ["packages/rules/src"]
    },
    "types": ["node", "express"],       // âœ… This loads the global Express namespace
     "typeRoots": ["./src/types", "../../node_modules/@types"],   // ðŸ‘ˆ add this
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2021",
    "module": "commonjs",
      "lib": ["ES2022", "DOM"],
       
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
