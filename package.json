{
  "name": "universal-finance-ai",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev:db": "docker compose -f infra/docker-compose.yml up -d",
    "dev:api": "pnpm --filter @ufa/api dev",
    "dev:web": "pnpm --filter @ufa/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "migrate": "pnpm --filter @ufa/db prisma migrate dev --name init",
    "seed": "pnpm --filter @ufa/db ts-node infra/seed/seed.ts"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.3",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@nestjs/schedule": "^6.0.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "csv-parse": "^6.1.0",
    "dayjs": "^1.11.13",
    "ethers": "^6.15.0",
    "json-logic-js": "^2.0.5",
    "nodemailer": "^7.0.6",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "zod": "^4.0.17"
  },
  "overrides": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  }
}
