{
  "info": {
    "name": "Day1 UFA Spine",
    "_postman_id": "b9c2d8a1-1f82-40e3-9c88-ufa-day1",
    "description": "Day 1 end-to-end test collection for Universal Finance AI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenantName\": \"Acme Inc\",\n  \"country\": \"IN\",\n  \"currency\": \"INR\",\n  \"email\": \"owner@acme.com\",\n  \"password\": \"secret123\",\n  \"name\": \"Owner\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/v1/auth/register", "host": ["{{baseUrl}}"], "path": ["v1", "auth", "register"] }
      },
      "response": []
    },
    {
      "name": "Accounts - Create Cash & Bank",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"code\": \"1000\", \"name\": \"Cash & Bank\", \"type\": \"ASSET\", \"currency\": \"INR\" }"
        },
        "url": { "raw": "{{baseUrl}}/v1/accounts", "host": ["{{baseUrl}}"], "path": ["v1", "accounts"] }
      }
    },
    {
      "name": "Ingestion - Upload Bank CSV",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "sample.csv" }
          ]
        },
        "url": { "raw": "{{baseUrl}}/v1/ingestion/bank-csv", "host": ["{{baseUrl}}"], "path": ["v1", "ingestion", "bank-csv"] }
      }
    },
    {
      "name": "Ingestion - Confirm",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/v1/ingestion/confirm", "host": ["{{baseUrl}}"], "path": ["v1", "ingestion", "confirm"] }
      }
    },
    {
      "name": "Reports - Trial Balance",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/v1/reports/trial-balance?asOf=2025-08-02",
          "host": ["{{baseUrl}}"],
          "path": ["v1", "reports", "trial-balance"],
          "query": [{ "key": "asOf", "value": "2025-08-02" }]
        }
      }
    },
    {
      "name": "Alerts - Critical",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/v1/alerts?level=CRITICAL", "host": ["{{baseUrl}}"], "path": ["v1", "alerts"], "query": [{ "key": "level", "value": "CRITICAL" }] }
      }
    },
    {
      "name": "Blockchain - Add Wallet",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"label\": \"Main Wallet\", \"chain\": \"polygon\", \"address\": \"0x1234567890abcdef\" }"
        },
        "url": { "raw": "{{baseUrl}}/v1/wallets", "host": ["{{baseUrl}}"], "path": ["v1", "wallets"] }
      }
    },
    {
      "name": "Blockchain - List Wallets",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": { "raw": "{{baseUrl}}/v1/wallets", "host": ["{{baseUrl}}"], "path": ["v1", "wallets"] }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" }
  ]
}
